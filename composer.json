{
    "name": "phongtran/logger",
    "description": "A package which provides a simple logger",
    "type": "package",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "phongtran\\Logger\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "phongtran\\Logger\\LoggerServiceProvider",
                "phongtran\\Logger\\RouteServiceProvider"
            ],
            "aliases": {
                "Logger": "phongtran\\Logger\\Facades\\Logger"
            }
        }
    },
    "authors": [
        {
            "name": "phongtran",
            "email": "jarvis.phongtran@gmail.com"
        }
    ],
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^8.0",
        "laravel/framework": "^10.0 || ^11.0 || ^12.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "orchestra/testbench": "^8.0 || ^9.0 || ^10.0"
    },
    "autoload-dev": {
        "psr-4": {
            "phongtran\\Logger\\Tests\\": "tests/"
        }
    }
}
